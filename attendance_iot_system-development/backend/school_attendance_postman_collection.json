{
	"info": {
		"_postman_id": "school-attendance-api",
		"name": "School Attendance API",
		"description": "Complete API collection for School Attendance System",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:5000/api",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "1. Authentication",
			"item": [
				{
					"name": "Register User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Admin User\",\n    \"email\": \"admin@example.com\",\n    \"password\": \"123456\",\n    \"role\": \"admin\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/users/register",
							"host": ["{{baseUrl}}"],
							"path": ["users", "register"]
						},
						"description": "Register a new user"
					}
				},
				{
					"name": "Login User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"admin@example.com\",\n    \"password\": \"123456\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/users/login",
							"host": ["{{baseUrl}}"],
							"path": ["users", "login"]
						},
						"description": "Login and get authentication token"
					}
				}
			]
		},
		{
			"name": "2. Classes",
			"item": [
				{
					"name": "Create Class",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Class A\",\n    \"year\": 2024,\n    \"section\": \"Morning\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/classes",
							"host": ["{{baseUrl}}"],
							"path": ["classes"]
						}
					}
				},
				{
					"name": "Get All Classes",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/classes",
							"host": ["{{baseUrl}}"],
							"path": ["classes"]
						}
					}
				},
				{
					"name": "Get Class by ID",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/classes/{{classId}}",
							"host": ["{{baseUrl}}"],
							"path": ["classes", "{{classId}}"]
						}
					}
				}
			]
		},
		{
			"name": "3. Subjects",
			"item": [
				{
					"name": "Create Subject",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Mathematics\",\n    \"code\": \"MATH101\",\n    \"description\": \"Basic Mathematics\",\n    \"weeklyHours\": 5,\n    \"totalHours\": 60,\n    \"semester\": 1,\n    \"year\": 2024\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/subjects",
							"host": ["{{baseUrl}}"],
							"path": ["subjects"]
						}
					}
				},
				{
					"name": "Get All Subjects",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/subjects",
							"host": ["{{baseUrl}}"],
							"path": ["subjects"]
						}
					}
				},
