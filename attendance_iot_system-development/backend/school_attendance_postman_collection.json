						"url": {
							"raw": "{{baseUrl}}/schedules",
							"host": ["{{baseUrl}}"],
							"path": ["schedules"]
						}
					}
				}
			]
		},
		{
			"name": "6. Attendance",
			"item": [
				{
					"name": "Record Attendance",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"student\": \"{{studentId}}\",\n    \"schedule\": \"{{scheduleId}}\",\n    \"status\": \"present\",\n    \"date\": \"2024-03-15\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/attendance",
							"host": ["{{baseUrl}}"],
							"path": ["attendance"]
						}
					}
				},
				{
					"name": "Get Subject Attendance",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/subjects/{{subjectId}}/attendance",
							"host": ["{{baseUrl}}"],
							"path": ["subjects", "{{subjectId}}", "attendance"]
						}
					}
				},
				{
					"name": "Get Student Subject Attendance",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/subjects/{{subjectId}}/attendance/{{studentId}}",
							"host": ["{{baseUrl}}"],
							"path": ["subjects", "{{subjectId}}", "attendance", "{{studentId}}"]
						}
					}
				}
			]
		},
		{
			"name": "RFID Attendance",
			"item": [
				{
					"name": "Record RFID Scan",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"rfidId\": \"123456789\",\n    \"deviceId\": \"65f1a2b3c4d5e6f7g8h9i0j1\"\n}"
						},
						"url": {
							"raw": "http://localhost:5000/api/attendance/scan",
							"protocol": "http",
							"host": ["localhost"],
							"port": "5000",
							"path": ["api", "attendance", "scan"]
