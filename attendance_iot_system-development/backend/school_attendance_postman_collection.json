				},
				{
					"name": "Get Recent Scans",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "http://localhost:5000/api/attendance/recent-scans",
							"protocol": "http",
							"host": ["localhost"],
							"port": "5000",
							"path": ["api", "attendance", "recent-scans"]
						},
						"description": "Get the 10 most recent attendance records"
					}
				}
			]
