					}
				}
			]
		},
		{
			"name": "5. Schedules",
			"item": [
				{
					"name": "Create Schedule",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"class\": \"{{classId}}\",\n    \"subject\": \"{{subjectId}}\",\n    \"day\": \"Monday\",\n    \"startTime\": \"09:00\",\n    \"endTime\": \"10:30\",\n    \"room\": \"Room 101\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/schedules",
